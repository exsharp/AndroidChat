<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/login_portrait"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <EditText
        android:id="@+id/login_user"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/login_portrait"
        android:gravity="center"
        android:background="@drawable/login_textview_bg"
        android:hint="用户账号"/>

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/login_user"
        android:gravity="center"
        android:background="@drawable/login_textview_bg"
        android:inputType="textPassword"
        android:hint="用户密码"/>

    <Button
        android:id="@+id/login_loginBT"
        android:text="登陆"
        android:textColor="#ffffff"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/login_password"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_login_bg"/>

    <LinearLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/login_problemBT"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:text="无法登陆？"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/login_registerBT"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:text="注册新用户"
            android:textColor="#ffffff"/>

    </LinearLayout>

</RelativeLayout>
