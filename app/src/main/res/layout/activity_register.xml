<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="60dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sharp.chat.RegisterActivity">

    <TextView
        android:id="@+id/register_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="注册账号"
        android:textSize="30sp"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/register_user"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/register_topic"
        android:gravity="center"
        android:background="@drawable/login_textview_bg"
        android:hint="用户账号"/>

    <EditText
        android:id="@+id/register_password1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/register_user"
        android:gravity="center"
        android:background="@drawable/login_textview_bg"
        android:hint="输入你的密码"/>

    <EditText
        android:id="@+id/register_password2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/register_password1"
        android:gravity="center"
        android:background="@drawable/login_textview_bg"
        android:inputType="textPassword"
        android:hint="再输入一次"/>

    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/register_password2"
        android:gravity="center"
        android:background="@drawable/login_textview_bg"
        android:inputType="textPassword"
        android:hint="请输入你的注册邮箱"/>


    <Button
        android:id="@+id/register_BT"
        android:text="注册"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/register_email"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_login_bg"/>

    <Button
        android:id="@+id/register_back_to_login"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="返回登陆"
        android:textSize="20sp"
        android:textColor="#ffffff"/>


</RelativeLayout>
