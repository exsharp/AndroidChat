<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sharp.chat.MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp">
        <Button
            android:id="@+id/main_messageBT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_message"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/main_contactBT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_contact"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/main_groupBT"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/main_group"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
